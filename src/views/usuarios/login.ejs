<!doctype html>
<html lang="es">
  <%- include('../partials/head'); %>
  <body>
    <div class="container-fluid">
      <%- include('../partials/navBar'); %>
      <!-- Cuerpo principal -->
      <section class="row">
          <article class="col-12  card pt-5" >
                  <div class="card-body container-fluid">
                    <h2 class="card-title card-title text-white bg-info text-center display-4 ">Iniciar Sesión</h2>
                    <h4 class="card-title text-center display-6 " >Introduzca su correo y contraseña.</h4>

                  </div>
          </article>
      </section>

      <section class="bg-home pt-15">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto bg-light pt-2 ">
                      <!--Aquí muestro los errores del lado del Js-Front -->
                      <div>
                        <ul id="errores"> </ul>
                      </div>
                      
                        <div class="signup-form">
                            <form action="/ingresar" method="post" class="formulario">
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="Email" value="" >
                                    <% if(typeof(errors) != 'undefined'){%>
                                      <span class="text-danger">
                                        <%= errors[0].msg %>
                                      </span>
                                   <%}%>
                                </div>
                                <div class="input-group mb-3">
                                  
                                  <input type="password" class="form-control js_password" placeholder="password" name="password" aria-label="Username">
                                  <div class="input-group-append">
                                    <span class="input-group-text" id="eye"><i class="fas fa-eye-slash"></i></span>
                                  </div>
                                </div>
                                <% if(typeof(errors) != 'undefined' ){%>
                                  <span class="text-danger">
                                    <%= errors[0].msg %>
                                  </span>
                               <%}%>

                                <div class="form-group ">
                                  <input type="checkbox" name="recordarme"><label class="checkbox-inline">Recordarme</label>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn btn-info">Ingresar</button>
                                </div>
                            </form>
                            <div class="text-center mb-3"><a href="/registro">Aun no poseo una cuenta</a></div>
                        </div>
                    </div>                        
                </div>
            </div>
      </section>
    </div> 
    <script src="/js/login.js"></script>
    </body>
</html>